{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "group",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength":1
    },
    "content": {
      "type": "string",
      "minLength":1
    },
    "mailDestination": {
      "type": "string",
      "format":"email"
    },
    "sendDate": {
      "type": "string",
      "format":"date-time"
    },
    "sendWithAttachment": {
      "type": "boolean"
    }
  },
  "required": [
    "title",
    "content",
    "mailDestination",
    "sendDate"
  ],
  "additionalProperties": false
}
